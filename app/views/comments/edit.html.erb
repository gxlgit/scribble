<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.label :post_id %>
  <%= f.text_field :post_id %>

  <%= f.submit %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete", class: "delete" %>
<% end %>
